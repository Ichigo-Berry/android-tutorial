<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditTextActivity">

    <RelativeLayout
        android:id="@+id/loading_activity_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        >

        <TextView
            android:layout_width="500px"
            android:layout_height="596px"
            android:background="@drawable/penguin"
            android:layout_centerInParent="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            >

            <TextView
                android:id="@+id/loading_activity2_button_new_user"
                android:layout_width="481px"
                android:layout_height="135px"
                android:background="@drawable/button_new_user"
                />
            <TextView
                android:id="@+id/loading_activity2_button_login"
                android:layout_width="481px"
                android:layout_height="135px"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_login"
                />

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>