<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditTextActivity">

    <RelativeLayout
        android:id="@+id/loading_activity_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        >

        <TextView
            android:id="@+id/activity_login_qq_icon"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/activity_login_qq_icon"
            />

        <EditText
            android:id="@+id/activity_login_account"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="#f2f3f7"
            android:hint="QQ号/手机号/邮箱"
            android:textColorHint="#b0b3bf"
            android:layout_below="@id/activity_login_qq_icon"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            />

        <EditText
            android:id="@+id/activity_login_passwd"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="#f2f3f7"
            android:hint="输入密码"
            android:textColorHint="#b0b3bf"
            android:layout_below="@id/activity_login_account"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>